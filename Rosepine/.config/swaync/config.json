{
  "$schema": "/etc/xdg/swaync/configSchema.json",
  "positionX": "right",
  "positionY": "top",
  "layer": "overlay",
  "control-center-layer": "top",
  "layer-shell": true,
  "cssPriority": "user",
  "control-center-margin-top": 0,
  "control-center-margin-bottom": 0,
  "control-center-margin-right": 0,
  "control-center-margin-left": 0,
  "notification-2fa-action": true,
  "notification-inline-replies": false,
  "notification-icon-size": 48,
  "notification-body-image-height": 100,
  "notification-body-image-width": 100,
  "timeout": 8,
  "timeout-low": 5,
  "timeout-critical": 0,
  "fit-to-screen": true,
  "relative-timestamps": true,
  "control-center-width": 500,
  //"control-center-height": 600,
  "notification-window-width": 430,

  "keyboard-shortcuts": true,
  "image-visibility": "when-available",
  "transition-time": 200,
  "hide-on-clear": true,
  "hide-on-action": true,
  "script-fail-notify": true,
  "scripts": {
    "example-script": {
      "exec": "echo 'Do something...'",
      "urgency": "Normal"
    },
    "example-action-script": {
      "exec": "echo 'Do something actionable!'",
      "urgency": "Normal",
      "run-on": "action"
    }
  },
  
  "widgets": [
    "menubar#label",
    "dnd",
    "inhibitors",
    "label",
    "backlight",
    "volume",
    "title",
    "notifications",
    "mpris"
   ],
   "widget-config": {
     "menubar#label": {
       "menu#power-buttons": {
         "label": "⏻", 
         "position": "right",
         "actions": [ 
           {
             "label": " 󰌾 Lock ",
             "command": "swaync-client -t -sw && swaylock -f"
           },
           {
             "label": " 󰍃 Log Out",
             "command": "swaync-client -t -sw && hyprctl dispatch exit 0"
           },
           {
             "label": " 󰤄 Suspend ",
             "command": "swaync-client -t -sw && systemctl suspend"
           },
           {
             "label": " 󰜉 Reboot",
             "command": "swaync-client -t -sw && reboot"
           },
           {
             "label": " 󰐥 Shut down ",
             "command": "swaync-client -t -sw && shutdown"
           }
         ]
     },
     "buttons-grid#amogus": {
       "actions": [
         {
           "label": " 󰏘 ",
           "command": "swaync-client -t -sw && nwg-look"
         },
         {
           "label": " 󰂯 ",
           "command": "swaync-client -t -sw && blueman-manager"
         }
       ]
     },
     "buttons#topbar-buttons": {
         "position": "left",
         "actions": [
           {
             "label": " 󰆞 ",
             "command": "swaync-client -t -sw && sh .config/hypr/scripts/screenshot"
           }
         ]
       }
     },
     "inhibitors": {
       "text": "inhibitors",
       "button-text": "Clear All",
       "clear-all-button": true
     },
     "title": {
       "text": "Notifcations",
       "clear-all-button": true,
       "button-text": "󰎟"
     },
     "label": {
     "max-lines": 5,
     "text": "Control Center"
     },
     "dnd": {
       "text": "Do Not Disturb"
     },
     "mpris": {
       "image-size": 64,
       "image-radius": 10
     },
     "backlight": {
       "label": " 󰃠 ",
       "device": "amdgpu_bl1"
     },
     "volume": {
       "label": " 󰕾 "
     }
   }
 }
 